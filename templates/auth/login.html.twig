 {% extends "base.html.twig" %}

    {% block body %}
    <style type="text/css">
    html,body{
        background-image: url('../assets/img/St Bernard_Y.png');
        background-size: cover;
        background-repeat: no-repeat;
        height: 100%;
        font-family: 'Numans', sans-serif;
    }

        body { background-color: #DADADA; }
        body > .grid { height: 100%; }
        .column { max-width: 450px; }

     .ui.segment {
      position: relative; 
      
      padding: 1em 1em;  
      border-radius: .28571429rem;  
      
}

      </style>

    <div class="ui middle aligned center aligned grid">
      <div class="column">
        <h2 class="ui teal image header">
          <div class="content">
              
          </div>
        </h2>
        <form class="ui large form">
          <div class="btn btn-success">
            <a href="{{ spotify_auth_url }}" class="ui fluid large teal submit button"><i class="spotify icon"></i>Me Connecter avec Spotify</a>
          </div>

          {% for flashMessage in app.session.flashbag.get('error') %}
          <div class="ui error message">{{ flashMessage }}</div>
          {% endfor %}

          {% for flashMessage in app.session.flashbag.get('success') %}
          <div class="ui error message">{{ flashMessage }}</div>
          {% endfor %}

        </form> 
      </div>
    </div>
    {% endblock %}